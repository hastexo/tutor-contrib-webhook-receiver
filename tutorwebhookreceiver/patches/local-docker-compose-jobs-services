      - DB_MIGRATION_PORT={{ MYSQL_PORT }}
      - 'DB_MIGRATION_OPTIONS={{ WEBHOOKRECEIVER_DB_MIGRATION_OPTIONS|tojson }}'
      - DJANGO_SECRET_KEY={{ WEBHOOKRECEIVER_DJANGO_SECRET_KEY }}
